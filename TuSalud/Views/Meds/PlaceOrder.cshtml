
@{
    ViewBag.Title = "PlaceOrder";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<input type="hidden" id="state" value=@TempData["state"] />
<div id="alertBox">
    <span class="closebtn" onclick="this.parentElement.style.display = 'none';">&times;</span>
    <p id="message"></p>
</div>
<center><h5 style="padding: 25px">Buscar Medicamento</h5></center>
<div class="twelve columns center">
    <form class="form" id="employees" action=@Url.Action("RegisterEmployee") method="post">
        <input type="text" class="textbox" name="name" placeholder="Nombre" required />
        <input type="number" class="textbox" name="id" min="0" max="2147483647" placeholder="UID" required />
        <input type="submit" class="button-primary btn" name="Enter" value="Buscar" />
    </form>
</div>
